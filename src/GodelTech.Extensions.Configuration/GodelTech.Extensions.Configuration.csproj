<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>GodelTech.Extensions.Configuration</PackageId>
    <VersionPrefix>1.0.0</VersionPrefix>
    <Authors>Vladimir Rodchenko</Authors>
    <Company>Godel Technologies</Company>
    <Description>Library contains configuration extensions.</Description>
    <Copyright>Godel Technologies 2021</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/GodelTech/GodelTech.Extensions.Configuration/wiki</PackageProjectUrl>
    <PackageIcon>icon.png</PackageIcon>
    <PackageIconUrl>https://www.gravatar.com/avatar/839234621070de51e7b9cabd5ceee8fe?s=64</PackageIconUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/GodelTech/GodelTech.Extensions.Configuration</RepositoryUrl>
    <PackageTags>dotnet extensions configuration</PackageTags>

    <AnalysisMode>AllEnabledByDefault</AnalysisMode>

    <!-- XML documentation -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

    <!-- Source Link needs this -->
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>

    <!-- SonarQube needs this -->
    <ProjectGuid>{00000000-0000-0000-0000-000000000010}</ProjectGuid>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <!-- Source Link needs this -->
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All" />
  </ItemGroup>

</Project>
